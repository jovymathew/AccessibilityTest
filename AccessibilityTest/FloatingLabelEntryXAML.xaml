<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AccessibilityTest.FloatingLabelEntryXAML">
    <ContentView.Content>
        <Grid HeightRequest="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            
        <Label x:Name="label" Text="{Binding LabelHint}"  VerticalTextAlignment="Center"/>
        <Entry x:Name="input"/>
        </Grid>
        
    </ContentView.Content>
</ContentView>
